{
  "include": [
    "src/**/*.ts", "src/**/*.tsx"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "downlevelIteration": true,
    "experimentalDecorators": true
  },
  "declaration": true 
}